	<div data-role="header">
		<a href="#tasklists" data-icon="back">Back</a>
        <h1>Edit Tasklist</h1>
		<a href="#tasklists/<%= id %>/destroy" data-icon="delete" data-role="button">Delete Tasklist</a>
  	</div>
  	<div data-role="content">
		<form id="edit-tasklist" name="tasklist">
		
		  <div class="field">
		    <label for="name">Name:*</label>
		    <input type="text" name="name" id="name" value="<%= name %>" required>
		  </div>
		  
		  <div class="field">
		    <label for="closed">Close Tasklist:</label>
			<select name="closed" id="select-closed" data-role="slider"  >
				<% if (closed == 1) { %>
			 		<option value="0">Open</option>
					<option value="1" selected>Closed</option>
				<% } else { %>
					<option value="0" selected >Open</option>
					<option value="1">Closed</option>
				<% } %>
			</select> 
		  </div>
		  
		  <div>
		  	<br>
		  	* mandatory field
		  </div
		
		  <div class="actions">
		    <input type="submit" value="Update Tasklist" />
		  </div>
		
		</form>

	</div>